<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/back_8dp_white"
    android:backgroundTint="@color/colorWhite"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="4dp"
    android:layout_margin="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/check_box_complete_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:button="@drawable/button_check_box"
        android:layout_gravity="top"
        />

    <TextView
        android:id="@+id/text_schedule_text"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/colorBlack"
        android:text="@string/sample_text" />

    <ImageButton
        android:id="@+id/image_btn_delete_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_gravity="top"
        android:tint="@color/colorRed"
        android:src="@drawable/ic_baseline_delete_24"
        android:background="@color/colorNoColor"/>

</LinearLayout>