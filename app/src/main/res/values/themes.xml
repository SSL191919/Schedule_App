<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ScheduleApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorOnSecondary">@color/colorBlack</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="ToolTheme" parent="Widget.AppCompat.Light.PopupMenu">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawableTint" tools:targetApi="m">@color/colorWhite</item>
        <item name="android:iconTint" tools:targetApi="o">@color/colorWhite</item>
        <item name="android:actionMenuTextColor">@color/colorWhite</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="android:hideOnContentScroll" tools:targetApi="lollipop">true</item>
        <item name="android:resumeWhilePausing" tools:targetApi="lollipop">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorWhite</item>
    </style>

    <style name="BottomNavTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="itemIconTint">@color/nav_bottom</item>
        <item name="itemTextColor">@color/nav_bottom</item>
        <item name="background">@color/colorWhite</item>
        <item name="backgroundColor">@color/colorWhite</item>
    </style>

</resources>